<style>
    .list-group>a{
        margin-bottom: 2%;
    }
</style>
<div class="container">

    <div class="row">

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Side Widget -->
            <div class="card my-4">
            <div class="card-body">
                <div class="col-12">
                    <ul class="list-group">
                        <a href="/profile/{{user._id}}"><li class="list-group-item">Detials</li></a>
                        <a href="/profile/edit/{{user._id}}"><li class="list-group-item active">Edit</li></a>
                        <a href="/profile/change-password/{{user._id}}"><li class="list-group-item">Change Password</li></a>
                        <a href="/blog/auth/logout"><li class="list-group-item">Logout</li></a>
                    </ul>
                </div>
            </div>
            </div>

        </div>

        <!-- Post Content Column -->
        <div class="col-lg-8">
            <div class="card card-register mx-auto mt-4 mb-2">
                <div class="card-header">Edit Account Info</div>
                <div class="card-body">
                    <form action="/profile/edit/{{user._id}}" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="form-row">
                        {{# if error }}
                            <div class="col-md-12 alert alert-danger">
                                {{error}}
                            </div>
                        {{/if}}
                        
                        <div class="col-md-12 text-center">
                            <img src="/profile_pic/{{user.profile_pic}}" id="profile-pic-display">
                            <i class="fa fa-camera" id="camera-icon" onclick="clickOn('profile_pic')"></i>
                            <input class="form-control" type="file" id="profile_pic" name="profile_pic" style="display: none;">
                        </div>
                        <div class="col-md-6">
                            <label for="first_name">First name</label>
                            <input value={{user.first_name}} class="form-control" id="first_name" type="text" aria-describedby="nameHelp" placeholder="Enter first name" name="first_name">
                        </div>
                        <div class="col-md-6">
                            <label for="last_name">Last name</label>
                            <input value={{user.last_name}}  class="form-control" id="last_name" type="text" aria-describedby="nameHelp" placeholder="Enter last name" name="last_name">
                        </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input value={{user.email}}  class="form-control" id="email" type="email" aria-describedby="emailHelp" placeholder="Enter email" name="email">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Update</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        
        reader.onload = function(e) {
          $('#profile-pic-display').attr('src', e.target.result);
        }
        
        reader.readAsDataURL(input.files[0]); // convert to base64 string
      }
    }

    function clickOn(id){
      document.getElementById(id).click();
    }

    $("#profile_pic").change(function() {
      readURL(this);
    });
</script>