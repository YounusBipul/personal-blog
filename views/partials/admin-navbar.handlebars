  <script>
    var limit=5;
    function getNotifications(){
      var url= 'http://localhost:4500/admin/notification/'+limit;
      $.getJSON( url, function( data ) {
        var items = [];
        var notifications= data.notifications;
        var new_noti = data.new_noti;

        if(new_noti == true){
          document.getElementById('new_noti').classList.add('fa-circle');
        }
        else{
          document.getElementById('new_noti').classList.remove('fa-circle');
        }

        var notificationString="";
        for(var i=0 ; i<notifications.length; i++){
          var noti = notifications[i];
          var state, state_class;
          if(noti.seen == 0){
            state = 'Not Seen';
            state_class= 'danger';
          }
          else{
            state= 'Seen';
            state_class = 'success';
          }
          notificationString+= "<a class='dropdown-item' target='_blank' href='/admin/notification/seen-notification/"+noti.post.slug+"/"+noti._id+"'> <span class='text-"+state_class+"'><strong>"+state+"</strong></span><div class='dropdown-message small'><b>"+noti.user.first_name+"</b> Commented on <b>"+noti.post.title+"</b></div></a><div class='dropdown-divider'></div>";
        }
        document.getElementById('notification-display').innerHTML= notificationString;
      });
    }
    getNotifications();
    window.setInterval(getNotifications, 5000);
    function markAllAsRead(){
      $.ajax({
        url: 'http://localhost:4500/admin/notification/mark-all-as-read',
        type: 'GET',
        success: function (data) {
          var message = data.message;      
          console.log(message);
        },
        error: function (error) {
          console.log(error)
        },
      });
    }
  </script>