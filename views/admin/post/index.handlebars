<h4>All posts</h4>
<div class="table-responsive">
<table class="table table-bordered table-hover text-center" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Cover Image</th>
            <th>Created at</th>
            <th>Title</th>
            <th>views</th>
            <th>Comments</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        
        <tr>
            <td><img src="/uploads/{{cover_image}}" style="height: 75px; width:125px;"></td>
            <td>{{created_at}}</td>
            <td>{{title}}</td>
            <td>{{view}}</td>
            <td>{{comments.length}}</td>
            <td><a target="_blank" href="/blog/{{slug}}" class="btn btn-success">view</a></td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                
                <form action="/admin/posts/delete/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>

        {{/each}}
    </tbody>
</table>
</div>

<ul class="pagination justify-content-center mb-4">
    {{#paginate current=current pages=pages url=url}} {{/paginate}}
</ul>
