<h4>All posts</h4>
<div class="table-responsive">
<table class="table table-bordered table-hover text-center" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created at</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each categorys}}
        
        <tr>
            <td>{{name}}</td>
            <td>{{created_at}}</td>
            <td><a href="/admin/categorys/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                
                <form action="/admin/categorys/delete/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>

        {{/each}}
    </tbody>
</table>
</div>

<ul class="pagination justify-content-center mb-4">
    {{#paginate current=current pages=pages url=url}} {{/paginate}}
</ul>
